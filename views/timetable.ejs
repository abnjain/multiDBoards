<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Class Time Table</title>
    <link rel="stylesheet" href="/styles/styles.css">
</head>
<body>

    <div class="container">
        <a href="/" class="btn">Back to Dashboard</a>
        <h1>Class Time Table</h1>

        <table border="1">
            <thead>
                <tr>
                    <th>Time</th>
                    <% for (let day of days) { %>
                        <th><%= day %></th>
                    <% } %>
                </tr>
            </thead>
            <tbody>
                <% for (let entry of timetable) { %>
                    <tr>
                        <td><%= entry.time %></td>
                        <% for (let day of days) { %>
                            <td contenteditable="true"
                                oninput="updateCell('<%= entry.time %>', '<%= day %>', this)">
                                <%= entry[day] %>
                            </td>
                        <% } %>
                    </tr>
                <% } %>
            </tbody>
        </table>
        <button onclick="saveTimetable()">Save Timetable</button>
    </div>

    <script>
        // Function to update individual cell
        function updateCell(time, day, element) {
            const value = element.innerText.trim();

            fetch("/tt/update-timetable", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ time, day, value })  // Send updated cell data to backend
            })
            .then(response => response.json())
            .then(data => {
                console.log("Updated Successfully:", data);
            })
            .catch(error => console.error("Error updating timetable:", error));
        }

        // Function to save entire timetable
        function saveTimetable() {
            fetch("/tt/save-timetable", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ timetable })  // Send the whole timetable to backend
            })
            .then(response => response.json())
            .then(data => {
                console.log("Timetable saved successfully:", data);
                alert("Timetable saved!");
            })
            .catch(error => console.error("Error saving timetable:", error));
        }
    </script>

</body>
</html>
